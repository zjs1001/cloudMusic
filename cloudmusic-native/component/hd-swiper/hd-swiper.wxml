<swiper indicator-dots="true" indicator-active-color='#d43c33' autoplay="true" circular='true' interval="3000" class="swiper">
  <block wx:for="{{banners}}" wx:key="index">
    <swiper-item>
      <image src="{{item.imageUrl}}" class="swiper-image" mode='widthFix'></image>
    </swiper-item>
  </block>
</swiper>