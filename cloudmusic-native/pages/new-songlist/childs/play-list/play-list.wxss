.list-content {
  width: 100%;
  height: calc(100% - 50rpx);
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
}

.list-item {
  width: 33.33333%;
  text-align: center;
  /* box-sizing: border-box; */
  padding: 10rpx;
}
.list-img {
  width: 100%;
  border-radius: 10rpx;
}

.desc {
  font-size: 28rpx;
  text-align: left;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}